[scene]
name = "Forest Level 1 Enhanced"
tilemap = "levels/lvl.json"
tileset = "assets/world_tileset.png"
background_color = #1a1a2eff
music = "assets/audio/forest_ambient.ogg"
gravity = 1400

[camera]
room_width = 320
room_height = 180
follow_mode = "room"
smooth_speed = 0

[entity id="playerspawn_1"]
type = "PlayerSpawn"
position = 143.3, 80.9

[entity id="slime_1"]
type = "Slime"
position = 200, 100
properties = {patrol_distance: 50, speed: 30}

[entity id="chest_1"]
type = "Chest"
position = 280, 120
properties = {contains: "coin", amount: 50}

[particle_emitter id="fireflies_1"]
type = "ambient"
position = 150, 60
emission_rate = 3
particle_texture = "assets/particles/glow.png"
properties = {speed: 20, lifetime: 3.0, color: "#ffff00"}

[particle_emitter id="waterfall_1"]
type = "waterfall"
position = 100, 40
emission_rate = 15
particle_texture = "assets/particles/water.png"
properties = {speed: 80, lifetime: 1.5, gravity: 200}

[light id="torch_1"]
position = 160, 80
radius = 80
color = #ff8844
intensity = 2.0
type = "point"
properties = {flicker: true, flicker_speed: 0.1}

[light id="moonlight"]
position = 160, 0
radius = 200
color = #6699ff
intensity = 0.8
type = "ambient"

[audio id="river_ambient"]
position = 100, 90
audio_file = "assets/audio/river.ogg"
volume = 0.6
loop = true
autoplay = true
min_distance = 50
max_distance = 200

[trigger id="level_exit"]
position = 300, 100
size = 32, 32
trigger_type = "level_transition"
action = "load_scene"
properties = {target_scene: "forest_2.scene", spawn_point: "entrance"}

[trigger id="checkpoint_1"]
position = 150, 100
size = 16, 32
trigger_type = "checkpoint"
action = "save_progress"
properties = {checkpoint_id: "forest_1_mid"}

[spawn_point id="enemy_spawn_1"]
position = 250, 90
entity_type = "Slime"
spawn_delay = 5.0
max_spawns = 3
properties = {patrol_distance: 40, speed: 25}

[spawn_point id="coin_spawn_1"]
position = 180, 70
entity_type = "Coin"
spawn_delay = 10.0
max_spawns = -1
properties = {value: 10}
